<Window x:Class="MemeMic.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemeMic"
        mc:Ignorable="d"
        Title="OverlayWindow" Height="500" WindowStyle="None" WindowStartupLocation="Manual"
        AllowsTransparency="True" ShowInTaskbar="False" SizeToContent="Width"
        Cursor="None" Topmost="True" IsHitTestVisible="False" Focusable="False" IsTabStop="False"
        FontWeight="Bold" FontSize="15" Foreground="White">
    
        <Window.Background>
            <SolidColorBrush Opacity="0.6" Color="Black"/>
        </Window.Background>
    <Border Margin="5 5 0 0">
        <StackPanel x:Name="stackPanel">
            
        </StackPanel>
    </Border>
</Window>
