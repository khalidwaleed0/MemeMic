<Window x:Class="MemeMic.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemeMic"
        mc:Ignorable="d"
        Title="OverlayWindow" WindowStyle="None" WindowStartupLocation="Manual"
        AllowsTransparency="True" ShowInTaskbar="False" SizeToContent="WidthAndHeight"
        Cursor="None" Topmost="True" IsHitTestVisible="False" Focusable="False" IsTabStop="False">
        <Window.Background>
            <SolidColorBrush Opacity="0.6" Color="Black"/>
        </Window.Background>
    <Border Margin="5 5 0 0">
        <StackPanel>
            <TextBox x:Name="texto" Text="ohayooooooo" FontWeight="Bold" Foreground="White" Background="Transparent" BorderBrush="Transparent" AcceptsReturn="True"/>
        </StackPanel>
    </Border>
</Window>
