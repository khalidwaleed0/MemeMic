<Window x:Class="MemeMic.PlayingOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemeMic"
        mc:Ignorable="d"
        WindowStartupLocation="Manual" WindowStyle="None" SizeToContent="WidthAndHeight"
        Topmost="true" Top="0" Left="0"
        AllowsTransparency="True" Focusable="False" IsTabStop="False" ShowInTaskbar="False" Cursor="None" ShowActivated="False"
        FontWeight="Bold" FontSize="15" Foreground="White">
    <Window.Background>
        <SolidColorBrush Opacity="0.6" Color="Black"/>
    </Window.Background>
    <Grid Margin="5 0 10 2">
        <TextBlock Text="Playing.."/>
    </Grid>
</Window>
